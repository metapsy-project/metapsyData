citHeader("To cite 'metapsyData' in publications use:")

citEntry(entry = "Manual",
         title        = "metapsyData: Access the Meta-Analytic Psychotherapy Databases",
         author       = personList(as.person("Mathias Harrer"),
                                   as.person("Eirini Karyotaki"),
                                   as.person("Pim Cuijpers")),
         year         = "2022",
         url          = "https://www.metapsy.org/r-package",

         textVersion  =
           paste("Harrer, M., Karyotaki, E., Cuijpers, P. (2022).",
                 "metapsyData: Access the Meta-Analytic Psychotherapy Databases.",
                 "URL metapsy.org/r-package.")
)
